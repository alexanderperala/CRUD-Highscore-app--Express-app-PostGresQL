<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/admin/admin_style.css" />
  </head>
  <body>
    <header class="header">
      <h2>Administration</h2>
    </header>
    <div class="grid">
      <div class="navbar">
        <div>
          <span>Spelare</span>
          <a href="/admin/players"><p>Lista spelare</p></a>
          <a href="/admin/players/new"><p>Lägg till spelare</p></a>
          <span> Spel</span>
          <a href="/admin/games"><p>Lista spel</p></a>
          <a href="/admin/games/new"><p>Lägg till spel</p></a>
          <span>Highscores</span>
          <a href="/admin/scores"><p>Lista highscores</p></a>
          <a href="/admin/scores/new"><p class="current-page">Lägg till highscores</p></a>
        </div>
      </div>
      <div class="container">
        <div class="addplayer-content">
          <div class="title-container">
            <h4 class="admin-page-title">Lägg till highscore</h4>
          </div>
          <div class="admin-form">


            <form autocomplete="off" method="POST">
              <label for="game_id">Spel</label>
              <select name="game_id" id="game_id">
                <option>Välj ett spel</option>
                <% data.forEach(game => { %>
                  <% if (game.game_id != null) { %>
                  <option value="<%= game.game_id %>"><%= game.game_name %></option>
                  <% }}) %>
              </select>

              <label for="player_id">Spelare</label>
              <select name="player_id" id="player_id">
                <option >Välj en spelare</option>
                <% data.forEach(player => { %>
                  <% if (player.player_id != null) { %>
                  <option value="<%= player.player_id %>"><%= player.firstname %> <%= player.lastname%></option>
                  <% }}) %>
              </select>
                
               <label for="date">Datum</label>
               <input name="date" type="date" id="date" placeholder="Ange datum">
              
              
              <label for="score">Poäng</label>
              <input name="score" type="number" id="score" min="0" placeholder="Ange poäng">
              
              <button class="add">Lägg till</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
